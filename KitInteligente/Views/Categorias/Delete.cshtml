@model KitInteligente.Models.Categoria

@{
    ViewBag.Title = "Delete";
}

<h2>Delete</h2>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Categoria</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Descricao)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Descricao)
        </dd>

    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()
        @Html.HiddenFor(model => model.PermitirExclusao)

        <div class="form-actions no-color">
             @{
                 if (ViewBag.permitirExclusao)
                 {
                    <input type="submit" value="Delete" class="btn btn-default" />
                 }
                 else
                 {
                    <input type="submit" value="Delete" class="btn btn-default" disabled="disabled" 
                           title="Existem produtos associados a esta categoria"
                           alt="Existem produtos associados a esta categoria" />
                 }
            }          
             |
            @Html.ActionLink("Back to List", "Index")
        </div>
    }
</div>
